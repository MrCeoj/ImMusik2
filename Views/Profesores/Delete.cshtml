@model ImMusik2.Profesores

@{
    ViewBag.Title = "Eliminar profesor";
}

@section Styles {
    <link rel="stylesheet" href="~/Content/Profesor/profesorDetails.css">
}

<h2>&emsp;</h2>

<div class="centered">
    <h3>¿Desea borrar este registro?</h3>
    <hr />
    <dl class="dl-horizontal">

        <div class="row">
            <dt>
                Nombre
            </dt>
            <dd>
                &emsp;@Html.DisplayFor(model => model.Nombre)
            </dd>
        </div>

        <div class="row">
            <dt>
                Apellido P.
            </dt>
            <dd>
                &emsp;@Html.DisplayFor(model => model.ApellidoPaterno)
            </dd>
        </div>

        <div class="row">
            <dt>
                Apellido M.
            </dt>
            <dd>
                &emsp;@Html.DisplayFor(model => model.ApellidoMaterno)
            </dd>
        </div>

        <div class="row">
            <dt>
                Contacto
            </dt>
            <dd>
                &emsp;@Html.DisplayFor(model => model.Contacto)
            </dd>
        </div>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <p>
            @Html.ActionLink("Regresar a lista", "Index")
            <input type="submit" value="Eliminar" class="btn-submit" />
        </p>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
